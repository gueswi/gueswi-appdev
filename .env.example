# Database
DATABASE_URL="postgresql://username:password@localhost:5432/gueswi_db"
PGDATABASE=gueswi_db
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password

# Authentication
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random
NEXTAUTH_SECRET=your-nextauth-secret-here

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================

# Stripe Configuration (get from https://dashboard.stripe.com/apikeys)
STRIPE_MODE=test  # test|live - controls which keys to use
STRIPE_SECRET_KEY=sk_test_...
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# Optional: Separate Live/Test Keys (for multi-environment setup)
STRIPE_SECRET_KEY_LIVE=sk_live_...
STRIPE_SECRET_KEY_TEST=sk_test_...
VITE_STRIPE_PUBLIC_KEY_LIVE=pk_live_...
VITE_STRIPE_PUBLIC_KEY_TEST=pk_test_...

# Stripe Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_WEBHOOK_SECRET_LIVE=whsec_...
STRIPE_WEBHOOK_SECRET_TEST=whsec_...

# Stripe Price IDs
STRIPE_STARTER_PRICE_ID=price_starter_...
STRIPE_GROWTH_PRICE_ID=price_growth_...

# PayPal Configuration (get from https://developer.paypal.com/)
PAYPAL_MODE=sandbox  # sandbox|live - controls which environment to use
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Optional: Separate Live/Sandbox Keys
PAYPAL_CLIENT_ID_LIVE=your-live-client-id
PAYPAL_CLIENT_SECRET_LIVE=your-live-client-secret
PAYPAL_CLIENT_ID_SANDBOX=your-sandbox-client-id
PAYPAL_CLIENT_SECRET_SANDBOX=your-sandbox-client-secret

# PayPal Webhooks
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
PAYPAL_WEBHOOK_ID_LIVE=your-live-webhook-id
PAYPAL_WEBHOOK_ID_SANDBOX=your-sandbox-webhook-id

# Webhook Base URL (for webhook endpoint URLs)
WEBHOOK_BASE_URL=https://your-app.replit.app

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# Postmark (preferred email provider)
POSTMARK_API_KEY=your-postmark-api-key
POSTMARK_FROM_EMAIL=noreply@yourdomain.com

# SMTP Fallback (used if Postmark not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Development Settings
NODE_ENV=development
PORT=5000

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# AI Service Settings (for future integration)
AI_SERVICE_URL=https://your-ai-service.com
AI_SERVICE_API_KEY=your-ai-service-key

# PBX Integration Settings (for future integration)
PBX_API_URL=https://your-pbx-server.com
PBX_API_KEY=your-pbx-api-key
PBX_WEBHOOK_SECRET=your-pbx-webhook-secret

# External Services
STORAGE_PROVIDER=local
STORAGE_BUCKET=gueswi-uploads
STORAGE_REGION=us-east-1

# Monitoring and Analytics (optional)
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Security Settings
CORS_ORIGIN=http://localhost:5000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Currency Exchange API (for VED conversion)
EXCHANGE_API_KEY=your-exchange-api-key
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4/latest/USD
